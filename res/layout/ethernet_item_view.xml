<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ethernet_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
             android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textview_select"
            android:id="@+id/ethernet_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="3"
            android:gravity="left|center"
            android:text="@string/pppoe_title"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/ethernet_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_weight="1"
            android:src="@drawable/route_img_selector"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/ethernet_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="150dp"
            android:background="@drawable/checkbox_switch_select"
            android:button="@null"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/base_line" />

</LinearLayout>