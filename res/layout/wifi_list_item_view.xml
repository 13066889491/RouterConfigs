<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/wifi_more_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/wifi_list_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/base_bg_2"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/wifi_list_number"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textview_select"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/wifi_device_name_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/base_bg_2"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/wifi_device_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textview_select"
            android:textSize="20dp" />

        <com.twowing.routeconfig.view.MarqueeView
            android:id="@+id/wifi_device_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:background="@drawable/base_bg_2"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textview_select"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/wifi_mac_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/base_bg_2"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/wifi_mac_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textview_select"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/wifi_ip_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@drawable/base_bg_2"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/wifi_ip_address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textview_select"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>